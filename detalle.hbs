<h2>Detalles del producto</h2>

<div class="product-detail">
  <h1>{{producto.nombre}}</h1>
  <p>Precio: ${{producto.precio}}</p>
  <img src="/images/{{producto.imagen}}" alt="{{producto.nombre}}" style="max-width: 400px; border-radius: 10px; margin-bottom: 20px;">
  <p>{{producto.descripcion}}</p>
  <a href="/">Volver</a>
</div>
