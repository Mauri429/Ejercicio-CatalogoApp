<h2>{{accion}} producto</h2>

<form action="{{#if producto.id}}/productos/{{producto.id}}{{else}}/productos{{/if}}" method="POST">
  <label>Nombre:</label>
  <input type="text" name="nombre" value="{{producto.nombre}}" required />

  <label>Descripci√≥n:</label>
  <textarea name="descripcion">{{producto.descripcion}}</textarea>

  <label>Precio:</label>
  <input type="number" step="0.01" name="precio" value="{{producto.precio}}" required />

  <label>Nombre de imagen (archivo en /public/images):</label>
  <input type="text" name="imagen" value="{{producto.imagen}}" required />

  <button type="submit">{{accion}}</button>
</form>
